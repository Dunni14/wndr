// prisma/schema.prisma

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String   @id @default(uuid())
  phone     String   @unique
  name      String?
  email     String?
  createdAt DateTime @default(now())
  memories  Memory[]
}

model Memory {
  id          String   @id @default(uuid())
  title       String
  description String?
  mood        String?
  latitude    Float
  longitude   Float
  imageUrl    String?
  visitDate   DateTime
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt   DateTime @default(now())
}



